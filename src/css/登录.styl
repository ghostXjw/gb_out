.m-page-login
  padding-top 170px
  >.head
    font-size 50px
    font-family '楷体', fantasy
    margin-bottom 140px
    color #e1ebff
    text-align center
    font-weight bold
    text-shadow 0 3px 10px rgba(14,70,183,.4)
  >form
    width 472px
    height 296px
    padding 36px 66px
    position relative
    border-radius 4px
    margin 0 auto
    box-shadow 0 10px 30px rgba(0,0,0,.15)
    background white
    color #8d8d8d
    >*
      display block
      width 100%
      margin-bottom 20px
    a
    ::-webkit-input-placeholder
      color @color
      font-size 14px
    [type=text]
    [type=password]
      height 52px
      background #f5f5f5
      border 0
      text-indent 14px
      border-radius 4px
    .identity
      overflow hidden
      >*
        float left
      [type="text"]
        width 172px
        margin-right 30px
      .img
        border 1px solid #e9e9e9
        height 50px
        overflow hidden
        margin-right 25px
      a
        line-height 52px
    .rememberme
      overflow hidden
      >label
        float left
      >a
        float right
    button
      height 52px
      background #588cf7
      text-align center
      color white
      border 0
      border-radius 4px
      font-size 18px
      cursor pointer


      