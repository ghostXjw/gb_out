.m-page-topic-detail
  border 1px solid #eaeaea
  border-radius 4px
  width 1200px
  margin 0 auto
  font-size 14px
  color #666666
  box-sizing border-box
  .head
    overflow hidden
    border-bottom border
    >.l
      overflow hidden
      float left
    >a.r
      float right
      border-left border
      width 112px
      height 38px
      line-height @height
      text-align center
      color #666666
      .i
        margin-right 8px
  .search
    padding 12px 14px
    line-height 28px
    border-bottom border
    >.line
      display table
      table-layout fixed
      width 100%
      >.l
      >.r
        display table-cell
      >.l
        width 82px

.m-page-topic-detail>.tabpage.l0
  .delline
    display table
    table-layout fixed
    color #666666
    border-bottom border
    height 40px
    width 100%
    .l
    .r
      display table-cell
    .l
      width 72px
      border-right border
      text-align center
      line-height @height
    a
      color inherit
    .r
      padding-left 22px
  .thead
  .tr
    display table
    table-layout fixed
    width 100%
    border-bottom border
    >.item
      display table-cell
      border-right border
      vertical-align middle
      text-align center
    >.item:last-child
      border-right 0
    >.item.l0
      width 72px
    >.item.l1
      width 772px
    >.item.l2
      width 148px
    >.item.l3
      width 140px
  .thead
    height 41px
  .tr
    >.item.l1
      text-align left
      padding 14px 16px
      box-sizing border-box
      >.title
        font-size 16px
        color #333333
        margin-bottom 10px
      >.cont
        line-height 25px
    >.item.l4
      >div
        height 64px
        line-height @height
        &:nth-child(1)
          border-bottom border
        .i
          cursor pointer
  .footer
    margin 11px 0 13px
    text-align center

.m-page-topic-detail>.tabpage.l1
  >.chart1w
    border-bottom border
    >.chart
      height 330px
      width 1198px
  >.wrap
    display table
    table-layout fixed
    height 412px
    .title
      margin 29px 28px 0
      color 333333
      &:before
        content ''
        width 14px
        height 14px
        display inline-block
        background #22a4e0
        margin-right 10px
        vertical-align -2px
    >.chart2w
      display table-cell
      width 640px
      border-right border
      .cont
        width @width
        height 392px
    >.chart3w
      display table-cell
      width 558px
      .wrap
        height 392px
        position relative
      .cont
        position absolute
        top 50%
        left 50%
        width 534px
        transform translate(-50%, -50%)
        line-height normal
        text-align center
        >.item
          height 38px
          width 130px
          color #22a4e0
          border 1px solid @color
          border-radius 4px
          line-height @height
          margin 0 21px 30px
          display inline-block

label.radio.seltime
  cursor default
  .cont
    cursor pointer
    display inline-block
  .block
    color #22a4e0
    font-size 12px
    display none
    input
      display inline-block
      margin 0 6px
      border 1px solid @color
      line-height 23px
      width 130px
      padding-left 8px
      border-radius 4px
    button
      cursor pointer
      line-height 23px
      border 1px solid @color
      background white
      color @color
      border-radius 4px
      width 60px
      &.main
        background @color
        color white
        margin-right 6px
  :checked ~ .block
    display inline-block