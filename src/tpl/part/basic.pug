mixin nav-a(isbtn)
  .m-nav-a(class={'m-nav-btn': isbtn})
    .item(onclick=`location.href = '专题列表.html'`, class={active: '专题列表' == title})
      .i(class='list')
      | 专题列表
    .item.kw(onclick=`location.href = '关键词设置.html'`, class={active: '关键词设置' == title})
      .i(class='kw')
      | 关键词设置
    .item.usr(class={active: '用户信息' == title})
      .i(class='user')
      | 张三
      .drop
