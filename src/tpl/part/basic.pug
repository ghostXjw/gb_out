        each line, index in list
          .line
            .num(class={active: index < 3})= index + 1
            a.cont(href="信息详情.html")= line

mixin formline(t, n, ph, pw, ec)
  .m-formline
    .label= t
    input.m-text(type=(pw ? "password" : "text"), class=ec, name=n, placeholder=ph)

mixin checkbox
  label.checkbox
    input(type="checkbox")&attributes(attributes)
    .img
    block

mixin radioT(c)
  label.radio.tab
    input(type="radio")&attributes(attributes)
    .cont= c

mixin radioL(c)
  label.radio.lab
    input(type="radio")&attributes(attributes)
    .cont= c

mixin radioC(c)
  label.radio.lst
    input(type="radio")&attributes(attributes)
    .cont= c

mixin pagenum
  - var n = 6
  .m-pagenum
    while n --> 0
      a.num(href='#', class={active: n == 5})= 6 - n
    a.next(href='#') 下一页

mixin fwin(name, title)
  - var c = `m-fwin-${name}`
  .m-fwin(class=c)
    .fwin
      .head
        .title= title
        .i.close(onclick=`$('.${c}').hide()`)
      .body
        block

mixin fwin-btns(name)
  - var c = `m-fwin-${name}`
  .m-btns
    button.m-btn.primary 保存
    button.m-btn.normal(onclick=`$('.${c}').hide()`) 取消

